	"author": {
		"name": "Angelo",
		"email": "angelo@pigeonposse.com",
		"url": "https://github.com/angelespejo"
	},
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"+": "run() { pnpm -F @creatium/\"${@:1}\"; }; run $@",
		"++": "pnpm -F $@",
		".": "dovenv",
		"build": "pnpm -F creatium build && pnpm -F create-creatium build",
		"push": "pnpm . readmes && pnpm . git push",
		"release": "changeset && changeset version && pnpm build && changeset publish",
		"test": "pnpm -F *creatium* test"
	},
	"dependencies": {
		"@changesets/cli": "2.27.10",
		"@dovenv/convert": "0.0.6",
		"@dovenv/lint": "0.0.6"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.5.0",
		"@dovenv/core": "0.0.6",
		"@dovenv/theme-banda": "0.0.6",
		"@dovenv/utils": "0.0.6",
		"@playwright/test": "1.49.0",
		"@types/node": "22.10.1",
		"tslib": "2.8.1",
		"tsx": "4.19.2",
		"typescript": "5.7.2",
		"unbuild": "2.0.0",
		"vitest": "2.1.6"
	},
	"packageManager": "pnpm@9.11.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.10.0"
	},
	"extra": {
		"id": "creatium",
		"productName": "creatium",
