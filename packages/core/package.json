{
	"name": "creatium",
	"version": "0.1.15",
	"description": "Build your create-bins quickly and easily",
	"keywords": [
		"bin",
		"cli",
		"create",
		"create-bins",
		"library",
		"node",
		"pigeonposse",
		"pp"
	],
	"homepage": "https://creatium.pigeonposse.com/guide/core",
	"bugs": {
		"url": "https://github.com/pigeonposse/creatium/issues",
		"email": "dev@pigeonposse.com"
	},
	"repository": {
		"type": "https",
		"url": "https://github.com/pigeonposse/creatium/",
		"directory": "packages/core"
	},
	"funding": {
		"type": "individual",
		"url": "https://pigeonposse.com/?popup=donate"
	},
	"license": "GPL-3.0",
	"author": {
		"name": "Angelo",
		"email": "angelo@pigeonposse.com",
		"url": "https://github.com/angelespejo"
	},
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/main.d.mts",
				"default": "./dist/main.mjs"
			},
			"require": {
				"types": "./dist/main.d.cts",
				"default": "./dist/main.cjs"
			}
		}
	},
	"main": "dist/main.mjs",
	"module": "dist/main.mjs",
	"types": "dist/main.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "unbuild",
		"dev": "tsx examples/simple/bin.ts",
		"example": "run(){ tsx examples/\"${@:1}\"/bin.ts; }; run $@",
		"size": "pnpm dlx @sizium/cli -i ./ --res info",
		"test": "vitest run -r src --passWithNoTests"
	},
	"dependencies": {
		"@clack/core": "0.5.0",
		"@clack/prompts": "0.11.0",
		"@visulima/boxen": "1.0.30",
		"cli-table3": "0.6.5",
		"columnify": "1.6.0",
		"deepmerge-ts": "7.1.5",
		"gradient-string": "3.0.0",
		"string-width": "7.2.0",
		"tiny-glob": "0.2.9",
		"tiny-updater": "3.5.3",
		"yargs": "17.7.2"
	},
	"devDependencies": {
		"@creatium/repo-config": "workspace:*",
		"@types/columnify": "1.5.4",
		"@types/yargs": "17.0.33"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
